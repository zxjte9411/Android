<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="npc.ntut.hw3.MainActivity">

    <TextView
        android:id="@+id/txtSex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/sex"
        android:textSize="20dp" />

    <Spinner
        android:id="@+id/spnSex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:entries="@array/sex_list"
        android:prompt="@string/spn_sex_list_promt"
        android:spinnerMode="dialog" />

    <TextView
        android:id="@+id/txtAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/age"
        android:textSize="20dp" />

    <RadioGroup
        android:id="@+id/radGrpAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radBtnAgeRange1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/maleAgeRange1" />

        <RadioButton
            android:id="@+id/radBtnAgeRange2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/maleAgeRange2" />

        <RadioButton
            android:id="@+id/radBtnAgeRange3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/maleAgeRange3" />
    </RadioGroup>

    <TextView
        android:id="@+id/txtNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/family"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/txtNumFamily"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/number" />

    <NumberPicker
        android:id="@+id/numPkrFamily"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal" />

    <Button
        android:id="@+id/btnOk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/btnOK"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/suggestion"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/txtSug"
        android:layout_width="273dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text=""
        android:textSize="20dp" />

</LinearLayout>
